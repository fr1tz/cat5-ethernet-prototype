function CelAnimationDlgInputCtrl::onInputEvent( %this, %device, %action )
{
	if ( %device $= "keyboard" )
	{
		// cancel...
		if ( %action $= "escape" )
		{
			// do nothing...
			Canvas.popDialog(CelAnimationDlg);
			return;
		}
		
		commandToServer('PlayParty',%action);
		Canvas.popDialog(CelAnimationDlg);
	}
}
